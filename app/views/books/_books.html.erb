<% cache @books do %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>image</th>
      <th>标题</th>
      <th>作者</th>
      <th>内容简介</th>
      <th>操作</th>
      <th>状态</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.image %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description[0, 200] %><a class="detail">...详细</a></td>
        <td><%= link_to "编辑", edit_book_path(book) %></td>
        <td><%= link_to '借阅历史', book_history_path(book)%></td>

        <% if book.user%>
          <%#<td><%= link_to "借还", check_in_path(book)></td>%>
          <td>已借出</td>
        <% else %>
          <%#<td><%= link_to "借还", check_out_path(book)></td>%>
          <td>在馆</td>
        <% end %>

        <td><%= link_to "删除", book, method: :delete, data: {confirm: "确认要删除#{book.title}吗？"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>